                    <span asp-validation-for="SpecialNumberOfDays" class="text-danger"></span>
                </div>
                <div class="form-group rtl m-4">
                    <input asp-for="SpecialPrice" type="text" class="form-control" placeholder="قیمت محصول ویژه" />
                    <span asp-validation-for="SpecialPrice" class="text-danger"></span>
                </div>


            </div>
