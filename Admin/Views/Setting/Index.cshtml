                    <span asp-validation-for="ImmediateNumberOfDays" class="text-danger"></span>
                </div>
                <div class="form-group rtl m-4">
                    <input asp-for="ImmediatePrice" type="text" class="form-control" placeholder="قیمت محصول فوری" />
