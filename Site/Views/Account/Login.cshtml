
@model LoginViewModel

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <form class="login100-form validate-form" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                    <span class="login100-form-title p-b-70">
                        @*صفحه ورود*@
                    </span>
                    <span class="login100-form-avatar">
                        <img src="~/assets/img/avatars/jenny.jpg" alt="AVATAR">
                    </span>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="wrap-input100 validate-input m-t-85 m-b-35" data-validate="نام کاربری را وارد کنید">
                        <input asp-for="UserName" class="input100" type="text" name="username">
                        <span class="focus-input100" data-placeholder="نام کاربری"></span>
                    </div>

                    <div class="wrap-input100 validate-input m-b-50" data-validate="رمز را وارد کنید">
                        <input asp-for="Password" class="input100" type="password" name="password">
                        <span class="focus-input100" data-placeholder="رمز"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <input asp-for="RememberMe" class="col-md-1" />
                            <label asp-for="RememberMe">

                                @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                        </div>
                    </div>

                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn">
                            ورود
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>



    </html>
